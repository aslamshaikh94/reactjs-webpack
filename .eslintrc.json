{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/prop-types": 0,
    "no-useless-escape": "off",
    "eqeqeq": ["error", "smart"],
    "no-console": "error",
    "camelcase": ["error"],
    "no-extra-bind": ["error"],
    "no-multi-spaces": ["error"],
    "no-debugger": "error",
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "arrow-parens": ["error", "as-needed"],
    "no-var": "error",
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
