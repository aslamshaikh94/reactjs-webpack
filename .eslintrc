{
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/prop-types": 0,
    "no-useless-escape": "off",
    "eqeqeq": ["error", "smart"],
    "no-console": "error",
    "camelcase": ["error"],
    "no-extra-bind": ["error"],
    "no-multi-spaces": ["error"],
    "no-debugger": "error",
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "arrow-parens": ["error", "as-needed"],
    "no-var": "error",
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
